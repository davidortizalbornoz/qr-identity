# ========================================
# CONFIGURACIÓN DE VARIABLES DE ENTORNO
# ========================================
# Copia este archivo como .env y configura tus valores reales
# cp .env.example .env

# ========================================
# CONFIGURACIÓN DE POSTGRESQL
# ========================================
# Host de la base de datos PostgreSQL
DB_HOST=localhost
# Puerto de PostgreSQL (por defecto 5432)
DB_PORT=5432
# Usuario de la base de datos
DB_USER=tu_usuario_postgres
# Contraseña del usuario
DB_PASSWORD=tu_password_postgres
# Nombre de la base de datos
DB_DATABASE=qr_identity_db
# Esquema de la base de datos
DB_SCHEMA=public

# ========================================
# CONFIGURACIÓN DE AWS S3
# ========================================
# Región de AWS donde está tu bucket S3
AWS_REGION=us-east-1
# Access Key ID de AWS (crear en IAM)
AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
# Secret Access Key de AWS (crear en IAM)
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
# Nombre del bucket S3
AWS_S3_BUCKET_NAME=mi-bucket-s3
# Tamaño máximo de archivo en bytes (10MB = 10485760)
